<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--顶部-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_margin"
                    android:paddingRight="@dimen/_margin"
                    android:paddingTop="@dimen/_high" >

                        <ImageView
                            android:id="@+id/fh"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:onClick="onLayoutClick"
                            android:clickable="true"
                            android:padding="@dimen/_margin"
                            android:src="@mipmap/z1"
                            android:layout_marginLeft="@dimen/_margin"/>

                        <ImageView
                            android:id="@+id/grzx_tx"
                            android:layout_height="90dp"
                            android:layout_width="90dp"
                            android:src="@mipmap/m_py"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"/>
                    <LinearLayout
                            android:id="@+id/grzx_denglu_zhuce"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/grzx_tx"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_margin"
                            android:gravity="center"
                            android:visibility="visible"
                            android:background="@drawable/text_b_baise">

                            <TextView
                                android:id="@+id/dl"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="隶属于公司名称"
                                android:gravity="right|center"
                                android:paddingRight="10dp"
                                android:singleLine="true"
                                android:textStyle="bold"
                                android:textSize="@dimen/_margin"
                                android:layout_marginTop="@dimen/_high_small"
                                android:layout_marginBottom="@dimen/_high_small"
                                android:layout_marginLeft="@dimen/_high" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="center"
                                android:background="@color/text_color"/>

                            <TextView
                                android:id="@+id/zc"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="13456847586"
                                android:layout_marginTop="@dimen/_high_small"
                                android:layout_marginBottom="@dimen/_high_small"
                                android:layout_marginRight="@dimen/_high"
                                android:textSize="@dimen/_margin"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>
            </RelativeLayout>
            <!--我的订单-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white1"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/simple_btn_height"
                android:text="我的订单"
                android:layout_gravity="center"
                android:textSize="@dimen/text_centre1"
                android:textStyle="bold"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_margin"
                android:layout_marginRight="@dimen/_margin"
                android:background="@color/gray1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/daifukuan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_margin"
                    android:drawableTop="@mipmap/grzx_dfk"
                    android:text="待付款"
                    android:drawablePadding="@dimen/_high_small"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:onClick="onLayoutClick"
                    android:clickable="true"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/daifahou"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_margin"
                    android:drawableTop="@mipmap/grzx_dfh"
                    android:text="待发货"
                    android:drawablePadding="@dimen/_high_small"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:onClick="onLayoutClick"
                    android:clickable="true"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/daishouhuo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_margin"
                    android:drawableTop="@mipmap/grzx_dsh"
                    android:text="待收货"
                    android:drawablePadding="@dimen/_high_small"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:onClick="onLayoutClick"
                    android:clickable="true"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_margin"
                    android:drawableTop="@mipmap/grzx_spsc"
                    android:text="商品收藏"
                    android:drawablePadding="@dimen/_high_small"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:onClick="onLayoutClick"
                    android:clickable="true"
                    android:gravity="center"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/simple_btn_height"
                android:text="账户信息"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="@dimen/text_centre1"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_margin"
                android:layout_marginRight="@dimen/_margin"
                android:background="@color/gray1"/>

            <!--我的钱包  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginBottom="@dimen/_margin"
                            android:layout_marginTop="@dimen/_margin"
                            android:text="此子账户"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/_margin"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:text="采购次数"/>
                                <TextView
                                    android:id="@+id/zhzx_cgcs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:layout_marginBottom="@dimen/_high_large"
                                    android:text="0"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/t"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:text="采购金额"/>
                                <TextView
                                    android:id="@+id/zhzx_cgje"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:layout_marginBottom="@dimen/_high_large"
                                    android:text="0"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/_margin"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:text="所赚积分"/>
                                <TextView
                                    android:id="@+id/zhzx_szjf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:layout_marginBottom="@dimen/_high_large"
                                    android:text="0"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/t"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:text="可用余额"/>
                                <TextView
                                    android:id="@+id/zhzx_kyye"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:layout_marginBottom="@dimen/_high_large"
                                    android:text="0"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_high_large"
                        android:layout_marginBottom="@dimen/_high_large"
                        android:background="@color/gray1"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/t"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginBottom="@dimen/_margin"
                            android:layout_marginTop="@dimen/_margin"
                            android:text="隶属公司"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/_margin"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:text="采购次数"/>
                                <TextView
                                    android:id="@+id/zhzx_lscgcs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:layout_marginBottom="@dimen/_high_large"
                                    android:text="0"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/t"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:text="采购金额"/>
                                <TextView
                                    android:id="@+id/zhzx_lscgje"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:layout_marginBottom="@dimen/_high_large"
                                    android:text="0"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/_margin"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/grzx_jifen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:text="累计积分"/>
                                <TextView
                                    android:id="@+id/zhzx_ljjf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:layout_marginBottom="@dimen/_high_large"
                                    android:text="0"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/t"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/grzx_zhuanghu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:text="账户数量"/>
                                <TextView
                                    android:id="@+id/zhzx_zhsl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_high_large"
                                    android:layout_marginBottom="@dimen/_high_large"
                                    android:text="0"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/gray1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_margin"
                android:layout_marginRight="@dimen/_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/zhanghuxinix"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/simple_btn_height"
                    android:onClick="onLayoutClick"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:textColor="@color/yellow1"
                        android:layout_gravity="center"
                        android:text="用户信息"/>

                    <ImageView
                        android:layout_width="@dimen/_margin"
                        android:layout_height="@dimen/_margin"
                        android:layout_gravity="right|center"
                        android:src="@mipmap/you"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/yellow1"/>

                <LinearLayout
                    android:id="@+id/yijianfankui"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/simple_btn_height"
                    android:onClick="onLayoutClick"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:textColor="@color/yellow1"
                        android:layout_gravity="center"
                        android:text="意见反馈"/>

                    <ImageView
                        android:layout_width="@dimen/_margin"
                        android:layout_height="@dimen/_margin"
                        android:layout_gravity="right|center"
                        android:src="@mipmap/you"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/yellow1"/>

                <LinearLayout
                    android:id="@+id/guanyuwomen"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/simple_btn_height"
                    android:onClick="onLayoutClick"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:textColor="@color/yellow1"
                        android:layout_gravity="center"
                        android:text="关于我们"/>

                    <ImageView
                        android:layout_width="@dimen/_margin"
                        android:layout_height="@dimen/_margin"
                        android:layout_gravity="right|center"
                        android:src="@mipmap/you"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/yellow1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

