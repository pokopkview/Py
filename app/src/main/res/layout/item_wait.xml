<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_quanbu1"
    android:background="@color/white1"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/hd_kongbai"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_high_small"
        android:background="@color/gray1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/wait_dingdanhao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:textColor="@color/gray2"/>
        <TextView
            android:id="@+id/wait_shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-1-8"
            android:textColor="@color/gray2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_margin"
        android:paddingRight="@dimen/_margin"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/wait_tupian"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/wait_miaoshu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_margin"
            android:ellipsize="end"
            android:lines="2"
            android:text="描述"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/wait_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥359"/>
            <TextView
                android:id="@+id/wait_shuliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_margin"
                android:text="x1"/>
            <TextView
                android:id="@+id/wait_jindu"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:textColor="@color/yellow1"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_high_small"
        android:background="@color/gray1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_margin"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共" />
        <TextView
            android:id="@+id/wait_jianshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="件商品" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_high_small3"
            android:text="实付" />
        <TextView
            android:id="@+id/wait_zongjinge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_high_small3"
            android:layout_marginRight="@dimen/_high_small3"
            android:textSize="@dimen/text_centre1"
            android:text="339" />
        <TextView
            android:id="@+id/wait_heise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_high_small3"
            android:layout_marginRight="@dimen/_high_small3"
            android:background="@drawable/text_background_heise"
            android:paddingLeft="@dimen/_margin"
            android:paddingRight="@dimen/_margin"
            android:paddingBottom="@dimen/_high_small3"
            android:paddingTop="@dimen/_high_small3"
            android:text="取消订单" />
        <TextView
            android:id="@+id/wait_huangse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_high_small3"
            android:background="@drawable/text_background_yellow"
            android:paddingLeft="@dimen/_margin"
            android:paddingRight="@dimen/_margin"
            android:paddingBottom="@dimen/_high_small3"
            android:paddingTop="@dimen/_high_small3"
            android:text="去付款" />
    </LinearLayout>

</LinearLayout>
