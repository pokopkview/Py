<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_margin"
        android:layout_marginBottom="@dimen/_margin"
        android:layout_marginLeft="@dimen/_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xuanzhong"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/iv_22"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/_margin"
            android:src="@mipmap/a_bj"/>

        <ImageView
            android:id="@+id/iv_33"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/text_background_gray"
            android:padding="@dimen/_high_small"
            android:gravity="center"
            android:src="@mipmap/jian"/>
        <EditText
            android:id="@+id/et_44"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="0.3"
            android:background="@drawable/text_background_gray"
            android:gravity="center"
            android:padding="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/text_centre1"
            android:textStyle="bold"
            android:text="1"/>
        <ImageView
            android:id="@+id/iv_55"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/text_background_gray"
            android:padding="10dp"
            android:layout_marginRight="@dimen/_high_small"
            android:src="@mipmap/jia"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/red1"
            android:paddingLeft="@dimen/_margin"
            android:paddingRight="@dimen/_margin"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="删除"/>
    </LinearLayout>

</LinearLayout>
