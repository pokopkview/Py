<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:background="@color/white1"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white1"
            android:paddingRight="@dimen/_margin"
            android:layout_margin="@dimen/_margin"
            android:paddingLeft="@dimen/_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="配送方式"/>

            <LinearLayout
                android:id="@+id/dd_songhuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onLayoutClick"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/dd_songhuo1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/xuanzhong"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="送货上门"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dd_ziqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_margin"
                android:onClick="onLayoutClick"
                android:clickable="true"
                android:layout_marginRight="@dimen/_margin"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/dd_ziqu1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/meixuanzhong"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="自提"/>
            </LinearLayout>



        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray2"/>
        <!--支付-->
        <LinearLayout
            android:id="@+id/dd_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_margin"
            android:layout_marginLeft="@dimen/_margin"
            android:onClick="onLayoutClick"
            android:clickable="true"
            android:background="@color/white1">

            <ImageView
                android:id="@+id/dd_weixin1"
                android:layout_width="@dimen/simple_btn_height"
                android:layout_height="@dimen/simple_btn_height"
                android:padding="@dimen/_high_small"
                android:src="@mipmap/wx1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_margin"
                android:text="微信"/>
            <ImageView
                android:id="@+id/dd_weixin11"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/meixuanzhong"/>
            <ImageView
                android:layout_height="18dp"
                android:layout_width="18dp"
                android:layout_gravity="center"
                android:padding="@dimen/_high_small"
                android:src="@mipmap/xia"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray2"/>

        <LinearLayout
            android:id="@+id/dd_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/simple_btn_height"
            android:layout_marginRight="@dimen/_margin"
            android:layout_marginLeft="@dimen/_margin"
            android:onClick="onLayoutClick"
            android:clickable="true"
            android:background="@color/white1">

            <ImageView
                android:id="@+id/dd_zhifubao1"
                android:layout_width="@dimen/simple_btn_height"
                android:layout_height="@dimen/simple_btn_height"
                android:padding="@dimen/_high_small"
                android:src="@mipmap/zfb2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_margin"
                android:text="支付宝"/>
            <ImageView
                android:id="@+id/dd_zhifubao11"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/xuanzhong"/>
            <ImageView
                android:layout_height="18dp"
                android:layout_width="18dp"
                android:layout_gravity="center"
                android:padding="@dimen/_high_small"
                android:src="@mipmap/xia"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray2"/>

        <LinearLayout
            android:id="@+id/dd_yue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_margin"
            android:layout_marginLeft="@dimen/_margin"
            android:onClick="onLayoutClick"
            android:clickable="true"
            android:background="@color/white1">

            <ImageView
                android:id="@+id/dd_yue1"
                android:layout_width="@dimen/simple_btn_height"
                android:layout_height="@dimen/simple_btn_height"
                android:padding="@dimen/_high_small"
                android:src="@mipmap/zhye1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_margin"
                android:text="账户余额"/>
            <ImageView
                android:id="@+id/dd_yue11"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/meixuanzhong"/>
            <ImageView
                android:layout_height="18dp"
                android:layout_width="18dp"
                android:layout_gravity="center"
                android:padding="@dimen/_high_small"
                android:src="@mipmap/xia"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/simple_btn_height"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:background="@color/white1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_margin"
                android:text="共"/>
            <TextView
                android:id="@+id/jianshu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_high_small"
                android:layout_marginRight="@dimen/_high_small"
                android:text="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_margin"
                android:text="件"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_margin"
                android:text="合计："/>
            <TextView
                android:id="@+id/heji2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_high_small"
                android:layout_marginRight="@dimen/_margin"
                android:textColor="@color/yellow1"
                android:textStyle="bold"
                android:text="￥1999"/>
            <TextView
                android:id="@+id/tijiaodd"
                android:layout_width="100dp"
                android:layout_height="@dimen/simple_btn_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="onLayoutClick"
                android:clickable="true"
                android:background="@color/yellow1"
                android:textColor="@color/white1"
                android:textStyle="bold"
                android:text="提交订单"/>

        </LinearLayout>
</LinearLayout>


