<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray1"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_btn_height"
        android:background="@color/white1"
        android:layout_marginTop="1dp"
        android:paddingLeft="@dimen/_margin"
        android:paddingRight="@dimen/_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="收件人"
            android:layout_gravity="center"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/shoujianrenxingming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入收件人姓名"
            android:background="@null"
            android:singleLine="true"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_btn_height"
        android:background="@color/white1"
        android:layout_marginTop="1dp"
        android:paddingLeft="@dimen/_margin"
        android:paddingRight="@dimen/_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_gravity="center"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/shoujihao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入收件人手机号"
            android:singleLine="true"
            android:inputType="number"
            android:background="@null"
            android:layout_gravity="center"
            android:maxLength="11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_btn_height"
        android:background="@color/white1"
        android:layout_marginTop="1dp"
        android:paddingLeft="@dimen/_margin"
        android:paddingRight="@dimen/_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="隶属公司"
            android:layout_gravity="center"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/shouhuodizhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入隶属公司"
            android:background="@null"
            android:singleLine="true"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_btn_height"
        android:background="@color/white1"
        android:layout_marginTop="1dp"
        android:paddingLeft="@dimen/_margin"
        android:paddingRight="@dimen/_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:layout_gravity="center"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/xiangxidizhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入街道门牌"
            android:background="@null"
            android:layout_gravity="center"
            android:singleLine="true" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_btn_height"
        android:background="@color/white1"
        android:layout_marginTop="2dp"
        android:paddingLeft="@dimen/_margin"
        android:paddingRight="@dimen/_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:layout_gravity="center"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onLayoutClick"
            android:clickable="true"
            android:src="@mipmap/moren"/>
    </LinearLayout>

</LinearLayout>
