<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_btn_height"
        android:gravity="bottom"
        android:background="@color/white1"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bt_shouye"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/simple_btn_height"
            android:padding="@dimen/_high_large"
            android:layout_gravity="center"
            android:gravity="center"
            android:button="@null"
            android:src="@mipmap/_b4"
            android:onClick="onClick"
            android:clickable="true" />

        <ImageView
            android:id="@+id/bt_yuqi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/simple_btn_height"
            android:padding="@dimen/_high_large"
            android:onClick="onClick"
            android:clickable="true"
            android:src="@mipmap/_b3"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/bt_anli"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/simple_btn_height"
            android:padding="@dimen/_high_large"
            android:onClick="onClick"
            android:clickable="true"
            android:src="@mipmap/_b2"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/bt_women"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/simple_btn_height"
            android:padding="@dimen/_high_large"
            android:onClick="onClick"
            android:clickable="true"
            android:src="@mipmap/_b1"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>
