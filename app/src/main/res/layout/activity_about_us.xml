<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <include layout="@layout/include_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/_margin"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_margin"
            android:padding="@dimen/text_large"
            android:src="@mipmap/m_py"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/erweima"/>
        <View
            android:layout_width="1dp"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/_margin"
            android:layout_marginRight="@dimen/_margin"
            android:background="@color/gray2"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow1"
                android:text="扫描左侧二维码，"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow1"
                android:layout_below="@+id/q1"
                android:layout_marginTop="@dimen/_high_small3"
                android:text="分享给更多同仁！"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background_yellow_hei"
                android:textColor="@color/yellow1"
                android:gravity="center"
                android:padding="@dimen/_high_large"
                android:layout_alignParentBottom="true"
                android:text="一键分享"/>

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginTop="@dimen/text_centre1"
        android:layout_marginLeft="@dimen/simple_btn_height"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/jiaruwomen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLayoutClick"
            android:clickable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow1"
                android:layout_gravity="center"
                android:textSize="@dimen/text_large"
                android:text="点击加入我们"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_high_large"
                android:src="@mipmap/jiaruwomen"/>

        </LinearLayout>


        <TextView
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:textColor="@color/yellow1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow1"
                android:text="联系电话："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow1"
                android:text="400-9651-681"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上海羽琪网络科技有限公司"
                android:textColor="@color/gray1"
                android:textSize="10dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:text="COPYRIGHT 2012-2017 沪ICP备17007398号-1"
                android:textColor="@color/gray1"
                android:textSize="10dp"
                android:gravity="center"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
